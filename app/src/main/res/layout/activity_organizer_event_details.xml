<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:title="Manage Event"
            app:titleTextColor="?attr/colorOnSurface"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Event Name & Basic Info -->
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Waiting List Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFF9C4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWaitingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Selected Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSelectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Attending Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAttendingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attending"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Action Buttons Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <!-- âœ¨ NEW: Lottery Actions (2 buttons toggle visibility) -->

            <!-- Run Lottery Button (Shows BEFORE lottery) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRunLottery"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸŽ° Run Lottery"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconTint="?attr/colorOnPrimary"
                android:layout_marginBottom="12dp"/>

            <!-- âœ¨ NEW: Draw Replacement Button (Shows AFTER lottery) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDrawReplacement"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ”„ Draw Replacement"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FFF9C4"
                app:strokeColor="#FBC02D"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconTint="?attr/colorOnSurface"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- Action Buttons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- View Entrants -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewEntrants"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="View Entrants"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginEnd="6dp"/>

                    <!-- View Map -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewMap"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="View Map"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_map"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginStart="6dp"/>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Generate QR -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerateQR"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="QR Code"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginEnd="6dp"/>

                    <!-- Send Notification -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendNotification"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Send Message"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_dialog_email"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginStart="6dp"/>

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Export CSV -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportCSV"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Export List"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginEnd="6dp"/>

                    <!-- Update Poster -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpdatePoster"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Update Poster"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:backgroundTint="?attr/colorSurfaceVariant"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconTint="?attr/colorOnSurface"
                        android:layout_marginStart="6dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Danger Zone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danger Zone"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelEvent"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancel Event"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FFEBEE"
                app:strokeColor="#D32F2F"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_delete"
                app:iconTint="#D32F2F"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
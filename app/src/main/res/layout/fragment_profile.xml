<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Fixed Header (Always Visible) -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textColor="?attr/colorOnSurface"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Settings"
            app:tint="?attr/colorOnSurface"/>

    </LinearLayout>

    <!-- Scrollable Content (Below Header) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="88dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Profile Icon + Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Profile Icon -->
                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text="ðŸ‘¤"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:background="?attr/colorSurfaceVariant"
                            android:layout_marginEnd="16dp"/>

                        <!-- Name + Email -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Name"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvProfileEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="user@email.com"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Role Badge -->
                    <TextView
                        android:id="@+id/tvProfileRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrant"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="?attr/colorSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Edit Profile"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="#000000"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconTint="#000000"
                        app:iconGravity="start"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats (Tappable) -->
            <LinearLayout
                android:id="@+id/layoutQuickStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp"
                android:weightSum="3">

                <!-- Waiting -->
                <LinearLayout
                    android:id="@+id/statsWaiting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF9E6"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvWaitingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>

                </LinearLayout>

                <!-- Selected -->
                <LinearLayout
                    android:id="@+id/statsSelected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#E8F5E9"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvSelectedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>

                </LinearLayout>

                <!-- Attending -->
                <LinearLayout
                    android:id="@+id/statsAttending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#E3F2FD"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvAttendingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attending"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Single "My Events" Button (Simplified) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyEvents"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“‹ My Events"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconTint="#000000"
                    app:iconGravity="start"/>

            </LinearLayout>

            <!-- Organizer Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp">

                <!-- Create Event -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âž• Create Event"
                    android:textColor="?attr/colorSurface"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="?attr/colorSurface"
                    app:iconGravity="start"/>

                <!-- My Organized Events -->
                <LinearLayout
                    android:id="@+id/btnMyOrganizedEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Organized Events"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage your events"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†’"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading View -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<!--
  badge_background.xml
  Save this in: app/src/main/res/drawable/badge_background.xml
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Red background -->
    <solid android:color="#FF0000"/>

    <!-- Optional: Add a white border -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorSurface"/>

    <!-- Make it circular -->
    <size
        android:width="18dp"
        android:height="18dp"/>

</shape>
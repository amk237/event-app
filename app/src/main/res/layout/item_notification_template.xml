<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Name & Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name -->
                <TextView
                    android:id="@+id/tvTemplateName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Template Name"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Type Badge -->
                <TextView
                    android:id="@+id/tvTemplateType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENT"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="4dp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Active Switch -->
            <Switch
                android:id="@+id/switchActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete template"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTemplateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp"/>

        <!-- Message -->
        <TextView
            android:id="@+id/tvTemplateMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification message with {placeholders}"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
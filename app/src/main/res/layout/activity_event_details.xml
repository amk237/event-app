<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. Loading Indicator: Shown while fetching data -->
        <ProgressBar
            android:id="@+id/progressBar_event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" /> <!-- Hide in preview -->

        <!-- 2. Content Group: Hidden during loading -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/content_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="image_event_poster,text_event_name,text_event_description,button_join_event"
            tools:visibility="visible" /> <!-- Show in preview -->

        <!-- 3. Event Poster Image -->
        <ImageView
            android:id="@+id/image_event_poster"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="@color/gray_light"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"
            android:contentDescription="Event Poster" />

        <!-- 4. Event Name -->
        <TextView
            android:id="@+id/text_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_event_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Hack the North Info Session" />

        <!-- 5. Event Description -->
        <TextView
            android:id="@+id/text_event_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_event_name"
            app:layout_constraintStart_toStartOf="@id/text_event_name"
            app:layout_constraintEnd_toEndOf="@id/text_event_name"
            tools:text="Learn how to register and prepare for Canada's largest hackathon." />

        <!-- 6. Join/Status Button -->
        <Button
            android:id="@+id/button_join_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_event_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Join Waiting List" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

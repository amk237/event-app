<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Fixed Header (Always Visible) -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="?attr/colorOnSurface"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Search Icon -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search"
            android:layout_marginEnd="8dp"
            app:tint="?attr/colorOnSurface"/>

        <!-- Notification Button with Badge Container -->
        <FrameLayout
            android:id="@+id/notificationContainer"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <!-- Bell Icon Button -->
            <ImageButton
                android:id="@+id/btnNotifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_popup_reminder"
                android:contentDescription="Notifications"
                app:tint="?attr/colorOnSurface"/>

            <!-- Badge (Red circle with number) -->
            <TextView
                android:id="@+id/tvNotificationBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:text="9+"
                android:textColor="?attr/colorSurface"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

    <!-- Scrollable Content (Below Header) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="88dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Scan QR Code Card (Prominent) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardScanQr"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan QR Code"
                        android:textColor="?attr/colorSurface"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join events instantly with QR codes"
                        android:textColor="#B0B0B0"
                        android:textSize="14sp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- NEW: My Favorites Section -->
            <LinearLayout
                android:id="@+id/sectionFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â­ My Favorites"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/btnSeeAllFavorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All â†’"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"/>

                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="48sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No favorites yet"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Happening Soon Section -->
            <LinearLayout
                android:id="@+id/sectionHappeningSoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Happening Soon"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>


                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHappeningSoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyHappeningSoon"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽª"
                        android:textSize="48sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No events happening soon"
                        android:textColor="#999999"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
            </LinearLayout>

            <!-- Popular This Week Section -->
            <LinearLayout
                android:id="@+id/sectionPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Popular This Week"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>


                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyPopular"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥"
                        android:textSize="48sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No popular events yet"
                        android:textColor="#999999"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="12dp"/>

                <!-- My Events Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyEvents"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="My Events"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconTint="#000000"
                    app:iconGravity="start"/>

                <!-- Create Event Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Create Event"
                    android:textColor="?attr/colorSurface"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="?attr/colorSurface"
                    app:iconGravity="start"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
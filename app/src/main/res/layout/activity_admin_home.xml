<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Platform Statistics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform Statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Statistics Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:layout_marginBottom="24dp">

            <!-- Events Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Users Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvUsersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Organizers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvOrganizersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organizers"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Active Events Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvActiveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Quick Actions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Browse All Events Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBrowseEvents"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Browse All Events"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="@color/black"
            app:iconGravity="start" />

        <!-- Browse All Users Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBrowseUsers"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Browse All Users"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="@color/black"
            app:iconGravity="start" />

        <!-- Browse Images Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBrowseImages"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Browse Images"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="@color/black"
            app:iconGravity="start" />

        <!-- Generate Reports Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateReports"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Generate Reports"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="@color/black"
            app:iconGravity="start" />

        <!-- TEST FIREBASE BUTTON - TEMPORARY -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestFirebase"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ”¥ Test Firebase Connection"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
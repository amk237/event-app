<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Event_App">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Profile Setup Activity -->
        <activity
            android:name=".ProfileSetupActivity"
            android:exported="false" />

        <!-- Main Activity (Entrant Home) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Entrant Browse Events Activity -->
        <activity android:name=".EntrantBrowseEventsActivity" />
        <!-- Entrant Settings Activity -->
        <activity android:name=".SettingsActivity" />

        <!-- Organizer Home Activity -->
        <activity
            android:name=".OrganizerHomeActivity"
            android:exported="false" />

        <!-- Admin Home Activity -->
        <activity
            android:name=".admin.AdminHomeActivity"
            android:exported="false" />

        <!-- Organizer: Selected/Confirmed lists + cancel -->
        <activity
            android:name=".ui.OrganizerEntrantsListActivity"
            android:exported="false" />

        <!-- Browse Events Activity -->
        <activity
            android:name=".admin.AdminBrowseEventsActivity"
            android:exported="false"
            android:parentActivityName=".admin.AdminHomeActivity" />

        <!-- Browse Users Activity -->
        <activity
            android:name=".admin.AdminBrowseUsersActivity"
            android:exported="false"
            android:parentActivityName=".admin.AdminHomeActivity" />

        <!-- Browse Images Activity -->
        <activity
            android:name=".admin.AdminBrowseImagesActivity"
            android:exported="false"
            android:parentActivityName=".admin.AdminHomeActivity" />

        <!-- EventDetailsActivity -->
        <activity
            android:name=".EventDetailsActivity"
            android:exported="false" />

        <!-- FileProvider for sharing CSV files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
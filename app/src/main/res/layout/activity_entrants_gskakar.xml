<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back_gskakar"
        android:contentDescription="@string/cd_back"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textColor="#111111"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textColor="#111111"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTopAction"
        style="?attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="@string/empty"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntrants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:hint="@string/hint_search"
        android:textColor="#111111"
        android:textColorHint="#666666"
        android:inputType="text"
        android:importantForAutofill="no"
        android:background="#F1F1F1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnSelected"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/tab_selected"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnWaitlisted"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/tab_waitlisted"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnCancelled"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="@string/tab_cancelled"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>
